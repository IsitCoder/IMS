@model IMS.Models.DTO.DTOBillSearchPurchase

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Bill</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewData["msg"]!=null)
            {
                <div class="text-danger">@ViewData["msg"]</div>
            }
            <div class="form-group">
                <label asp-for="SupplierId" class="control-label"></label>
                <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BillCreateDate" class="control-label"></label>
                <input name="BillCreateDate" class="form-control" autocomplete="on" value="@DateTime.Now"/>
                <span asp-validation-for="BillCreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Search Date Time for purhcase orders</label>
                <label class ="control-label">Bill Start Date</label>
                <input type="datetime" name="startdate" class="form-control" autocomplete="on" value="@DateTime.Now.AddDays(-1)" />
                <label class="control-label">Bill End Date</label>
                <input type="datetime" name="enddate" class="form-control" autocomplete="on" value="@DateTime.Now" />
                
            </div>


            <div class="form-group">
                <input type="submit" value="Filter" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
